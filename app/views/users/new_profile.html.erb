	<!--Profile FORM-->



<% if current_user.present? %>
<%= form_for @profile, :url => {:action => "profile", :controller => "users" }, :html => {:multipart => true} do |f| %>

<p>
  <%= f.label :fname, "First Name:"%>
  <%= f.text_field :fname %>
</p>

<p>
  <%= f.label :lname, "Last Name:"%>
  <%= f.text_field :lname %>
</p>

<p>
  <%= f.label :gender, "Gender:"%>
  <%= f.text_field :gender %>
</p>

<p>
  <%= f.label :dob, "Date of Birth:"%>
  <%= f.text_field :dob %>
</p>

<p>
  <%= f.label :country, "Country:"%>
  <%= f.text_field :country %>
</p>

<p>
  <%= f.label :state, "State:"%>
  <%= f.text_field :state %>
</p>

<p>
  <%= f.label :city, "City:"%>
  <%= f.text_field :city %>
</p>

<p>
  <%= f.label :address, "Address:"%>
  <%= f.text_field :address %>
</p>

<p>
  <%= f.label :pin, "Pin Code:"%>
  <%= f.text_field :pin %>
</p>

<p>
  <%= f.label :phone, "Mobile No.:"%>
  <%= f.text_field :phone %>
</p>

<p>
	<%= f.label :image, "Image:"%>
    <%= f.file_field :image %>
</p>
<p>
    <%= f.label :remote_image_url, "or image URL:" %><br />
    <%= f.text_field :remote_image_url %>
</p>

<p><%= f.submit "Save" %>

<% end %>

<% end %>

<!--end Profile form-->
    								
